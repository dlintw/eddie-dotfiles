[user]
  name = Daniel YC Lin
  email = dlin.tw@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  autocrlf = false
  quotepath = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Apps/Development/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
  co = checkout
  ci = commit
  br = branch
  aa = add --all
  r  = !git l -20
  ra = !git l --all
  l  = "!source ~/.dotfiles/.githelper && pretty_git_log"
  la = !git l --all
  s = status
[gui]
  encoding = utf-8
[i18n]
  commitencoding = utf-8
[color]
  ui = auto
